{
  "manifest_version": 3,
  "name": "LinkedIn Reply",
  "version": "1.0",
  "description": "Quickly insert reply template into LinkedIn messages",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ]
}
